<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMobilenBlog.Views.UserView.UserDetailPage"
             Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="User ID:" FontSize="Medium" />
        <Label Text="{Binding UserId, Mode=TwoWay}" FontSize="Medium"/>

        <Label Text="Username:" FontSize="Medium" />
        <Label Text="{Binding Username}" FontSize="Small"/>

        <Label Text="Email:" FontSize="Medium" />
        <Label Text="{Binding Email}" FontSize="Small"/>

        <Label Text="Password Hash:" FontSize="Medium" />
        <Label Text="{Binding PasswordHash}" FontSize="Small"/>

        <Label Text="Registration Date:" FontSize="Medium" />
        <Label Text="{Binding RegistrationDate}" FontSize="Small"/>

        <Label Text="Role ID:" FontSize="Medium" />
        <Label Text="{Binding RoleId}" FontSize="Small"/>

        <StackLayout Orientation="Horizontal">
            <Button Text="Anuluj" Command="{Binding CancelCommand}" HorizontalOptions="FillAndExpand"></Button>
            <Button Text="Edytuj" Command="{Binding UpdateCommand}" HorizontalOptions="FillAndExpand"></Button>
            <Button Text="Usuń" Command="{Binding DeleteCommand}" HorizontalOptions="FillAndExpand"></Button>
        </StackLayout>
    </StackLayout>
</ContentPage>
